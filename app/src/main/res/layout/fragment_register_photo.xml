<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp"

            tools:context=".login.view.LoginActivity">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="48dp"
                android:contentDescription="@null"
                android:src="@drawable/photo_icon" />

            <TextView
                style="@style/Theme.Instagram_app.TextViewBase.Form"
                android:layout_gravity="center"
                android:text="@string/photo_register_title"
                android:textColor="@color/black"
                android:textSize="24sp" />


            <TextView
                style="@style/Theme.Instagram_app.TextViewBase.Form"
                android:layout_gravity="center"
                android:text="@string/photo_register_subtitle"
                android:textColor="@color/black" />


            <com.example.instagram_app.login.view.LoadingButton
                android:id="@+id/register_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/add_photo" />

            <Button
                style="@style/Theme.Instagram_app.Link"
                android:id="@+id/register_btn_jump"
                android:text="@string/jump" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
